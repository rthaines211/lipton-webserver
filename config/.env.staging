# Staging Environment
NODE_ENV=staging
PORT=8080

# Database (will create separate staging database)
DB_HOST=/cloudsql/docmosis-tornado-staging:us-central1:legal-forms-db-staging
DB_NAME=legal_forms_db_staging
DB_USER=staging-user
DB_PASSWORD=staging-password-here

# Authentication (simpler token for staging)
ACCESS_TOKEN=staging-test-token

# Cloud Run URLs (will be created when we deploy staging)
NODE_SERVER_URL=https://node-server-staging-xxx.run.app
PYTHON_PIPELINE_URL=https://python-pipeline-staging-xxx.run.app

# Features (disable expensive features to save money)
DROPBOX_ENABLED=false
PIPELINE_API_ENABLED=true
EXECUTE_PIPELINE_ON_SUBMIT=true
CONTINUE_ON_PIPELINE_FAILURE=true
