# Development Environment (Local)
NODE_ENV=development
PORT=3000

# Database (local PostgreSQL on your Mac)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=legal_forms_db_dev
DB_USER=postgres
DB_PASSWORD=postgres

# No authentication required in dev
# ACCESS_TOKEN not needed

# Local URLs
NODE_SERVER_URL=http://localhost:3000
PIPELINE_API_URL=http://localhost:5001

# Features (PIPELINE ENABLED for Phase 2.3 testing)
DROPBOX_ENABLED=false
PIPELINE_API_ENABLED=true
EXECUTE_PIPELINE_ON_SUBMIT=true
CONTINUE_ON_PIPELINE_FAILURE=true
